<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/createEditUser"
    style="@style/DialogStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/DialogHeaderStyle">

        <ImageView
            android:id="@+id/icon_user"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_icon_size"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginStart="1dp"
            android:src="@mipmap/ic_user"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/dialogUserTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:paddingTop="@dimen/dialog_text_padding"
            android:paddingBottom="@dimen/dialog_text_padding"
            android:paddingLeft="@dimen/dialog_text_padding"
            android:paddingRight="@dimen/dialog_text_padding"
            android:gravity="center_horizontal"
            android:lines="1"
            style="@style/DialogTitleTextStyle" />

    </LinearLayout>

    <EditText
        android:id="@+id/dialogUserNameEDT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dialog_edtTxt_margin"
        android:paddingTop="@dimen/dialog_edtTxt_padding"
        android:paddingBottom="@dimen/dialog_edtTxt_padding"
        android:inputType="textCapWords"
        android:text=""
        style="@style/EDTStyle"
        android:backgroundTint="@color/edtTextColor"
        android:textCursorDrawable="@drawable/cursor_white"/>

    <Button
        android:id="@+id/btnDialogCreateUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dialog_button_margin"
        style="@style/CustomButtonStyle" />

</LinearLayout>